            </tfoot>
            <tbody>
                <% if (arrayAtletas.length > 0) { %>
                    <% arrayAtletas.forEach(atleta => { %>
                        <tr>
                            <td><a href="atletas/<%= atleta.id %>" class="btn btn-warning btn-sm">Editar</a></td>
