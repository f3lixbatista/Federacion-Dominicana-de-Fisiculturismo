<%- include("template/cabecera", {tituloWeb: "Pagina de Atletas"}) %>



<div class="container container-fluid p-5">
    
    <h1><%= eventosDinamicos %></h1>

    <a
        class="btn btn-dark btn-block my-4" 
        href="/atletas/crear"
    >
        Nueva Membres√≠a
    </a>
  
    <div class="table-responsive" id="mydatatable-container">
        <table class="records_list table table-striped table-bordered table-hover" id="mydatatable">
            <thead>
                <tr>
                    <th scope="col">Orden Salida</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Filter..</th>
                    <th>Filter..</th>
                    <th>Filter..</th>
                    <td></td>
                </tr>
            </tfoot>
            <tbody>
                <% if (arrayDinamicos.length > 0) { %>
                    <% arrayDinamicos.forEach(eventosDinamicos => { %>
                        <tr>
                            <th scope="row"><%= eventosDinamicos.Salida %></th>
                            <td><%= eventosDinamicos.Categoria %></td>
                            <td><%= eventosDinamicos.Competidor %></td>
                            <td><a href="atletas/<%= eventosDinamicos.id %>" class="btn btn-warning btn-sm">Editar</a></td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>


  <script type="text/javascript">
    $(document).ready(function () {
        $('#mydatatable tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Filtrar.." />');
        });

        var table = $('#mydatatable').DataTable({
            "dom": 'B<"float-left"i><"float-right"f>t<"float-left"l><"float-right"p><"clearfix">',
            "responsive": false,
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
            },
            "order": [
                [0, "desc"]
            ],
            "initComplete": function () {
                this.api().columns().every(function () {
                    var that = this;

                    $('input', this.footer()).on('keyup change', function () {
                        if (that.search() !== this.value) {
                            that
                                .search(this.value)
                                .draw();
                        }
                    });
                })
            },
            "buttons": ['csv', 'excel', 'pdf', 'print']
        });
    });
  </script>

