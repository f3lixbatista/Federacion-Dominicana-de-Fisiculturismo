<%- include("template/cabecera", {tituloWeb: "Pagina de Atletas"}) %>

<div class="container divGeneral border border-1 border-dark pl-2 pr-2 pb-2 col-10" style="height: 41vh; margin-top: -3vh;">
    <div class="table-responsive col-10 ml-auto mr-auto mt-0 pt-0" id="mydatatable-container" style="height: 40vh;">     
        <div class="col-6 ml-0 p-0">
            <h1 class="">Inscripcion a Evento</h1>
        </div>
       
        <table class="records_list table table-striped table-bordered border border-dark border-3 table-hover" id="mydatatable">
            <thead>
                <tr class="table-blue"> 
                    <th scope="col" class="bg-primary">Cedula</th>
                    <th scope="col" class="bg-primary fs-5 mx-5 pl-5 pr-5 mx-4 position-relative"><p class="position-absolute top-0 start-0">Nombre</p></th>  
                    <th scope="col" class="bg-primary">IDFDFF</th>
                    <th scope="col" class="bg-primary">Accion</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                   
                    <th>Filter..</th>
                    <th>Filter..</th>
                    <th>Filter..</th>
                    <td></td>
                </tr>
            </tfoot>
            <tbody>
                <% if (arrayAtletas.length > 0) { %>
                    <% arrayAtletas.forEach(atleta => { %>
                        <tr>
                            <td class="col-sm-3"><%= atleta.Cedula %></td>
                            <td class="col-sm-8 fs-4"><%= atleta.Nombre %></td>
                            <th class="col-sm-2" scope="row"><%= atleta.IDFDFF %></th>
                            <td><a href="inscripcion/<%= atleta.id %>" class="btn btn-warning btn-sm">Inscribir</a></td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

    <div class="container table-responsive col-10 ml-auto mr-auto mt-0 pt-0" style="width: 65%;" id="mydatatable-container">     
        <div class="ml-0 p-0">
            <h1 style="color: rgb(0, 0, 0);" class="text-center fw-bold">Mr. Region Norte 2022</h1>
        </div>
        
        <table class="records_list table table-bordered border border-dark border-3 table-hover" id="mydatatable">
            <% if (arrayCategorias.length > 0) { %>
                <% arrayCategorias.forEach(categoria => { %>
           
            <thead>
                <tr class=""> 
                    <th colspan="5" class="col-sm-12 fs-4 text-center lh-1"><%= categoria.Categoria %></th>
                    <!-- <th scope="col" class="bg-primary fs-5 mx-5 pl-5 pr-5 mx-4 position-relative"><p class="position-absolute top-0 start-0">Nombre</p></th>  
                    <th scope="col" class="bg-primary">IDFDFF</th>
                    <th scope="col" class="bg-primary">Accion</th> -->
                </tr>
            </thead>
            <tfoot>
                <tr class="fw-bold" style="background-color: rgb(229, 224, 224);">
                    <td>No.</td>
                    <td class="border border-dark border-3">Atleta</td>
                    <td>Edad</td>
                    <td class="border border-dark border-3">Peso</td>
                    <td>Estatura</td>
                </tr>
            </tfoot>
            <tbody>
                    <% for (let index = 1; index < categoria.Competidor.length; index++) { %>
                        <!-- const element = array[index]; -->
                        <tr class="border border-dark border-3 p-0 m-0 lh-1">
                            <td style="margin: 0%; padding: 0%; width: 8%;" class="pl-0 pr-0"><input style="width:100%;" class="mt-1 text-center bg-white border-0 p-0 m-0" type="text"></td>
                            <td class="margin: 0%; padding: 0%; border border-dark border-3 fw-bold col fs-5"><%= categoria.Competidor[index].Nombre %></td>
                            <td class="margin: 0%; padding: 0%; col fs-5"><%= categoria.Competidor[index].Edad %></td>
                            <td class="margin: 0%; padding: 0%; border border-dark border-3 col fs-5"><%= categoria.Competidor[index].Peso %></td>
                            <td class="margin: 0%; padding: 0%; col fs-5"><%= categoria.Competidor[index].Estatura %></td>
                        </tr>
                    <% } %>
            </tbody>
            <% }) %>
        <% } %>
        </table>
        
    </div>




    <script type="text/javascript">
        $(document).ready(function () {
            $('#mydatatable tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Filtrar.." />');
            });
    
            var table = $('#mydatatable').DataTable({
                "dom": 'B<"float-left"i><"float-right"f>t<"float-left"l><"float-right"p><"clearfix">',
                "responsive": false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.19/i18n/Spanish.json"
                },
                "order": [
                    [0, "desc"]
                ],
                "initComplete": function () {
                    this.api().columns().every(function () {
                        var that = this;
    
                        $('input', this.footer()).on('keyup change', function () {
                            if (that.search() !== this.value) {
                                that
                                    .search(this.value)
                                    .draw();
                            }
                        });
                    })
                },
                "buttons": ['csv', 'excel', 'pdf', 'print']
            });
        });
      </script>
   

<%- include("template/footer") %>